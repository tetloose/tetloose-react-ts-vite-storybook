{
    "name": "tetloose-react-ts-vite-storybook",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "setup": "yarn && husky install && yarn storybook",
        "start": "vite",
        "build": "tsc -b && vite build",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "lint": "eslint --ext .ts,.tsx ./src && stylelint \"./src/**/*.scss\"",
        "lint:fix": "eslint --ext .ts,.tsx ./src --fix && stylelint \"./src/**/*.scss\" --fix",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "preview": "vite preview",
        "pre-commit": "yarn lint && yarn test run",
        "gen:component": "bash toolkit generate-component",
        "git:commit": "bash toolkit git-commit"
    },
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "useTabs": false,
        "arrowParens": "always",
        "singleQuote": true,
        "jsxSingleQuote": true
    },
    "dependencies": {
        "classnames": "^2.5.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hot-toast": "^2.4.1",
        "react-lazy-load-image-component": "^1.6.2",
        "react-router-dom": "^6.25.1"
    },
    "devDependencies": {
        "@storybook/addon-a11y": "^8.2.6",
        "@storybook/addon-designs": "^8.0.3",
        "@storybook/addon-essentials": "^8.2.6",
        "@storybook/addon-interactions": "^8.2.6",
        "@storybook/addon-links": "^8.2.6",
        "@storybook/blocks": "^8.2.6",
        "@storybook/builder-vite": "^8.2.6",
        "@storybook/react": "^8.2.6",
        "@storybook/react-vite": "^8.2.6",
        "@storybook/test": "^8.2.6",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "^16.0.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^20.14.12",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/react-lazy-load-image-component": "^1.6.3",
        "@typescript-eslint/eslint-plugin": "^7.17.0",
        "@typescript-eslint/parser": "^7.17.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "@vitest/coverage-v8": "^2.0.4",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.9",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-storybook": "^0.8.0",
        "husky": "^9.1.1",
        "jsdom": "^24.1.1",
        "pinst": "^3.0.0",
        "postcss-modules-resolve-from-alias": "^1.3.0",
        "react-error-boundary": "^4.0.13",
        "sass": "1.56.2",
        "storybook": "^8.2.6",
        "storybook-addon-remix-react-router": "^3.0.0",
        "stylelint": "^14.16.1",
        "stylelint-config-standard-scss": "^6.1.0",
        "stylelint-order": "^5.0.0",
        "typescript": "^5.5.4",
        "typescript-plugin-css-modules": "^5.1.0",
        "vite": "^5.3.4",
        "vite-plugin-checker": "^0.7.2",
        "vite-plugin-svgr": "3.2.0",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^2.0.4",
        "vitest-canvas-mock": "^0.3.3"
    }
}
