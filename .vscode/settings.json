{
  "files.insertFinalNewline": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "CSS": "CSS",
    "SCSS": "CSS",
    "typescript": "typescriptreact"
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "eslint.validate": [
    "typescript",
    "typescriptreact"
  ],
  "stylelint.validate": [
    "css",
    "scss"
  ],
  "files.exclude": {
    ".d.ts": false,
    ".husky": false,
    ".scripts": false,
    ".storybook/images.d.ts": false,
    ".storybook/main.ts": false,
    ".storybook/manager.js": false,
    ".vitest": false,
    ".vscode": false,
    "node_modules": false,
    ".editorconfig": false,
    ".gitignore": false,
    "eslint.config.js": false,
    "package-lock.json": false,
    "package.json": false,
    "stylelint.config.js": false,
    "toolkit": false,
    "tsconfig.app.json": false,
    "tsconfig.json": false,
    "tsconfig.node.json": false,
    "vite.config.ts": false
  },
  "search.exclude": {
    "node_modules": true,
    "build": true,
    "storybook-static": true
  }
}
